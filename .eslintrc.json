{
	"env": {
	  "browser": true,
	  "es2021": true
	},
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
	  "ecmaVersion": "latest",
	  "sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
	  "indent": ["error", "tab"],
	  "linebreak-style": ["warn", "unix"],
	  "quotes": ["error", "single"],
	  "semi": ["error", "never"],
	  "padding-line-between-statements": ["error",{ "blankLine": "always", "prev": "*", "next": ["return", "function", "if", "switch", "for", "while"] },
	  { "blankLine": "any", "prev": ["return", "function", "if", "switch", "for", "while"], "next": ["return", "function", "if", "switch", "for", "while"] }],
	  "space-infix-ops": "error",
	  "space-before-function-paren": ["error", "always"],
	  "one-var": ["error", "never"],
	  "object-curly-spacing": ["error", "always"],
	  "func-names": "error"
	}
  }